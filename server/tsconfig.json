{
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./src",
        "outDir": "./dist",
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "#config": [
                "./config"
            ],
            "#constants": [
                "./constants"
            ],
            "#utils/*": [
                "./utils/*"
            ],
            "#providers/*": [
                "./providers/*"
            ],
            "#routes/*": [
                "./routes/*"
            ],
            "#middlewares/*": [
                "./middlewares/*"
            ],
            "#app/*": [
                "./app/*"
            ]
        },
        "typeRoots": [
            "./@types/auth.d.ts"
        ]
    },
    "include": [
        "./src",
        "tsdown.config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}

{
  "compilerOptions": {
    "strict": true,

    "baseUrl": "./src",
    "outDir": "./dist",

    "target": "es2020",
    "module": "esnext"  ,
    "moduleResolution": "node",

    "esModuleInterop": true,
    "skipLibCheck": true,

    "paths": {
      "#/*": ["./*"],
    }
  },
  "include": ["./src", "tsdown.config.ts"],
  "exclude": ["node_modules"]
}
